{
  "name": "dockops-board",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint -- --ignore-path ../../.gitignore",
    "prettier": "turbo run prettier -- --ignore-path ../../.gitignore",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "hooks": "simple-git-hooks"
  },
  "devDependencies": {
    "eslint-config-custom": "*",
    "prettier": "^2.8.4",
    "simple-git-hooks": "^2.8.1",
    "turbo": "latest"
  },
  "engines": {
    "node": "18.14.0",
    "npm": "9.3.1"
  },
  "simple-git-hooks": {
    "pre-commit": "npm run prettier && npm run lint"
  },
  "packageManager": "npm@9.3.1"
}
