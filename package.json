{
  "name": "dockops-board",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "hooks:install": "simple-git-hooks",
    "lint": "npm run lint -w=apps/backend -w=apps/frontend",
    "lint:fix": "npm run lint:fix -w=apps/backend -w=apps/frontend",
    "prettier": "npm run prettier -w=apps/backend -w=apps/frontend",
    "prettier:fix": "npm run prettier:fix -w=apps/backend -w=apps/frontend",
    "style:fix": "npm run prettier:fix && npm run lint:fix"
  },
  "devDependencies": {
    "eslint-config-custom": "*",
    "prettier": "^2.8.4",
    "rimraf": "^4.1.2",
    "simple-git-hooks": "^2.8.1",
    "turbo": "latest"
  },
  "engines": {
    "node": "18.14.0",
    "npm": "9.3.1"
  },
  "simple-git-hooks": {
    "pre-commit": "npm run prettier && npm run lint || (echo \"Style errors found. Try npm run style:fix\" && exit 1)"
  },
  "packageManager": "npm@9.3.1",
  "dependencies": {
  }
}
